<tool id="aydin_lucy" name="Aydin Lucy" version="0.1.13" python_template_version="3.9">
    <requirements>
        <package type="conda" env="aydin_env" init="pip install aydin">python=3.9 cudatoolkit</package>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        python '$__tool_directory__cli.py' --infile ${i} --psf ${psf} --slicing ${slicing} --backend ${backend} --out ${out_deconvolved} 
    ]]></command>
    <inputs>
        <param type="data" name="i" format="imagetiff" label="Input Image" help="input image" />
        <param type="data" name="psf" format="imagetiff" label="PSF Image" help="PSF image" />
        <param argument="--slicing" type="string" value="default" label="Slicing" help="" />
        <param argument="--backend" type="string" value="default" label="Backend" help="" />
    </inputs>
    <outputs>
        <data name="out_deconvolved" format="imagetiff" label="Deconvolved output image" />
    </outputs>
    <help><![CDATA[
        https://royerlab.github.io/aydin/index.html
    ]]></help>
    <citations>
    </citations>
</tool>
