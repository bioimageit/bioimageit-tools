<tool id="cellpose" name="cellpose" version="1.0.0" python_template_version="3.5">
    <requirements>
        <package type="conda" env="cellpose">cellpose</package>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        python '$__tool_directory__cellpose_notebook.py' --infile ${infile} ${--use_gpu} --pretrained_model ${model}  
    ]]></command>
    <inputs>
        <param type="data" name="i" format="imagetiff" label="Input Image" help="image" />   
        <param argument="--pretrained_model" type="select" label="Pretrained model" help="Cyto pretrained model or none">
            <option value="cyto">Cyto</option>
            <option value="nuclei">Nuclei</option>
        </param>
        <param argument="--use_gpu" type="select" label="Use GPU" help="Use Nvidia GPU cuda cores or not">
            <option value="--use_gpu">Use GPU</option>
            <option value="">None</option>
        </param>
        
    </inputs>
    <help><![CDATA[
        https://github.com/MouseLand/cellpose
    ]]></help>
    <citations>
    </citations>
</tool>
