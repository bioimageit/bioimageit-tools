<tool id="gnomon" name="gnomon" version="0.71.0" python_template_version="3.5">
    <requirements>
        <package type="conda" env="gnomon">-c gnomon -c mosaic -c morpheme -c dtk-forge6 -c conda-forge gnomon=0.71.0 python=3.9</package>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        gnomonPipelineRunner ${pipeline} --ios ${input},${i} --ios ${output},${o}
    ]]></command>
    <inputs>
        <param type="data" name="i" label="Input Image" help="image" />
        <param argument="-input" type="string" value="imageReader1_path" label="firstReader" help="first reader name passed to ios" />
        <param argument="-output" type="string" value="cellimageWriter1_path" label="firstWriter" help="first writer name passed to ios" />
        <param argument="-pipeline" type="string" value="" label="pipeline file" help="path to the json pipeline file to run" />
    </inputs>
    <outputs>
        <data name="o" label="Output" />
    </outputs>
    <tests>
        <test>
            <param name="input" value="p58-t0_imgFus_down_interp_2x.inr.gz" />
            <param name="pipeline" value="segmentation_pipeline.json" />
            <output name="o" file="p58-t0_imgFus_down_interp_2x_o.inr.gz" />
        </test>
    </tests>
    <help><![CDATA[
        https://gnomon.gitlabpages.inria.fr/gnomon/
    ]]></help>
    <citations>
    </citations>
</tool>