<tool id="clesperanto_basic_stats" name="Clesperanto Basic Stats" version="1.0.0" python_template_version="3.5">
    <requirements>
        <package type="conda" env="clesperanto">-c conda-forge pyopencl pyclesperanto-prototype python</package>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        python '$__tool_directory__clesperanto_basic_stats.py' --infile ${i} --spot_sigma ${spot_sigma} --out ${out}
    ]]></command>
    <inputs>
        <param type="data" name="i" format="imagetiff" label="Input Image" help="image" />
        <param type="float" name="spot_sigma" value="3.5" label="Spot sigma" help="Spot sigma" />
    </inputs>
    <outputs>
        <data name="out" format="tablecsv" label="Output csv" /> 
    </outputs>
    <tests>
        <test>
            <param name="i" value="blobs.png" />
            <param name="spot_sigma" value="3.5" />
        </test>
    </tests>
    <help><![CDATA[
        https://github.com/clEsperanto/pyclesperanto_prototype
    ]]></help>
    <citations>
    </citations>
</tool>
