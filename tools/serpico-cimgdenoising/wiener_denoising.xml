<tool id="CImgDenoisingWiener" name="Denoising Wiener" version="1.0.0" python_template_version="3.5">
    <requirements>
        <container type="docker">registry.gitlab.inria.fr/serpico/cimgdenoising:ddf864ae8888ef587dbb49e53efc3da3ae8f8736</container>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        denoise -i '${i}' -o '${o}' -patch '${patch}' -denoisep '${denoisep}' -algo Wiener
    ]]></command>
    <inputs>
        <param type="data" name="i" format="imagetiff" label="Input Image" help="2D or 3D image" />
        <param argument="-patch" type="integer" min="0" value="3" label="Half size of the patch" />
        <param argument="-denoisep" type="float" label="1.25" help="Denoising parameter" />
    </inputs>
    <outputs>
        <data name="o" format="imagetiff" label="Denoised image" />
    </outputs>
    <tests>
        <test>
            <param name="i" value="Montage.tif" />
            <param name="patch" value="3" />
            <param name="denoisep" value="1.25" />
            <output name="o" file="wiener_result.tif" compare="sim_size" />
        </test>
    </tests>
    <help><![CDATA[
        https://team.inria.fr/serpico/software/
    ]]></help>
    <citations>
    </citations>
</tool>
