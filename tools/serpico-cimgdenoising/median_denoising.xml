<tool id="median_denoising" name="Denoising Median" version="1.0.0" python_template_version="3.5">
    <requirements>
        <container type="docker">registry.gitlab.inria.fr/serpico/cimgdenoising:ddf864ae8888ef587dbb49e53efc3da3ae8f8736</container>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        denoise -i '${i}' -o '${o}' -neigh '${-neigh}' -algo Median
    ]]></command>
    <inputs>
        <param type="data" name="i" format="imagetiff" label="Input Image" help="2D or 3D image" />
        <param argument="-neigh" type="float" min="0" value="7" label="Half size of the neighborhood" />
    </inputs>
    <outputs>
        <data name="o" format="imagetiff" label="Denoised image" />
    </outputs>
    <tests>
        <test>
            <param name="i" value="Montage.tif" />
            <param name="neigh" value="7" />
            <output name="o" file="median_result.tif" compare="sim_size" />
        </test>
    </tests>
    <help><![CDATA[
        https://team.inria.fr/serpico/software/
    ]]></help>
    <citations>
    </citations>
</tool>

