<tool id="robust" name="Robust-Cellpose3D" version="1.0.0" python_template_version="3.5">
    <requirements>
        <package type="conda" env="cellpose" init="pip install torch==1.9.0+cu111 -f https://download.pytorch.org/whl/torch_stable.html">cellpose python=3.8 robust-cellpose3d</package>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        python '$__tool_directory__robust.py' --infile ${i} --mask ${mask} --out ${out}
    ]]></command>
    <inputs>
        <param type="data" name="i" format="imagetiff" label="Input Image" help="input image" />
        <param type="data" name="mask" format="imagetiff" label="Mask Image" help="mask image" />
    </inputs>
    <outputs>
        <data name="out" format="tablecsv" label="Output csv" /> 
    </outputs>>
    <help><![CDATA[
        https://github.com/stegmaierj/Cellpose3D
    ]]></help>
    <citations>
    </citations>
</tool>
