<tool id="cudadecon" name="cudadecon" version="0.1.2" python_template_version="3.5">
    <requirements>
        <container type="docker">registry.gitlab.inria.fr/bioimage-it/pycudadecon:fbb14e8d42d3f08a9ab6dca1dcdd300cafb660c3</container>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        conda activate decon_env && cudadecon -i ${i} -o ${o} -p ${p} -b ${b} 
    ]]></command>
    <inputs>
        <param type="data" name="i" format="tiff" label="Input Image" help="image" />
        <param type="data" name="p" format="tiff" label="PSF Image" help="image" />
        <param argument="-b" type="float" value="80" label="Background" help="Intensity of the background" />
    </inputs>
    <outputs>
        <data name="o" format="tiff" label="Output image" />
    </outputs>
    <help><![CDATA[
        https://github.com/tlambert03/pycudadecon
    ]]></help>
    <citations>
    </citations>
</tool>