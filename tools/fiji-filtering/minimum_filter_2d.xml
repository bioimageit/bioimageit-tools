<tool id="minimum-filter-2d" name="fiji minimum filter 2d" version="1.0.0" python_template_version="3.5">
    <requirements>
        <container type="docker">registry.gitlab.inria.fr/bioimage-it/fiji-docker:8d6153f4f9e7fdf3851ce44e425cb1e66e36164e</container>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        ImageJ-linux64 --headless --console -macro minimum_filter_2d.ijm '[${input},${radius},${output}]'
    ]]></command>
    <inputs>
        <param type="data" name="input" format="tiff" label="Input image" />
        <param argument="-radius" type="float" value="1" label="Radius" />
    </inputs>
    <outputs>
        <data format="tiff" name="output" label="Ouput image"/>
    </outputs>
    <tests>
        <test>
            <param name="input" value="celegans2d.tif" />
            <param name="radius" value="2" />
            <output name="output" file="minimum_filter_2d.tif" compare="sim_content" />
        </test>
    </tests>
    <help><![CDATA[
        https://bioimage-it.gitlabpages.inria.fr/fiji-tools/
    ]]></help>
    <citations>
    </citations>
</tool>