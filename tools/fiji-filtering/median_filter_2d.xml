<tool id="median-filter-2d" name="fiji median filter 2d" version="1.0.0" python_template_version="3.5">
    <requirements>
        <package type="conda" env="median-filter-2d">python</package>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        '$__fiji__' --headless --console -macro median_filter_2d.ijm [${input},${radius},${output}]
    ]]></command>
    <inputs>
        <param type="data" name="input" format="imagetiff" label="Input image" />
        <param argument="-radius" type="float" value="1" label="Radius" />
    </inputs>
    <outputs>
        <data format="imagetiff" name="output" label="Ouput image"/>
    </outputs>
    <tests>
        <test>
            <param name="input" value="celegans2d.tif" />
            <param name="radius" value="2" />
            <output name="output" file="median_filter_2d.tif" compare="sim_content" />
        </test>
    </tests>
    <help><![CDATA[
        https://bioimage-it.gitlabpages.inria.fr/fiji-tools/
    ]]></help>
    <citations>
    </citations>
</tool>